<launch>
  <!-- Arguments -->

    <arg name="scan_topic" default="/scan" /> 
    <arg name="laser_frame" default="laser" />
    <arg name="odom_frame" default="odom" />
    <arg name="base_frame" default="base_link" />
    <arg name="map_frame" default="map" />
    <arg name="localization" value="false"/>
    <arg name="slam_toolbox" default="false" />
    
    <arg name="debug" default="false" />
    <arg name="respawn" value="true"/>

    <arg name="world_name" default="mowito"/>
    <arg name="gui" default="true"/>
    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="slam_methods" default="gmapping" doc="slam type [gmapping, cartographer, hector, karto, frontier_exploration]"/>
    <arg name="configuration_basename" default="turtlebot3_lds_2d.lua"/>
    <arg name="open_rviz" default="true"/>

  <!-- TurtleBot3 -->
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- SLAM: Gmapping, Cartographer, Hector, Karto, Frontier_exploration, RTAB-Map -->
    <group unless="$(arg slam_toolbox)">
    <include file="$(find mowito_turtlebot)/launch/secondary_launch/start_mw_mapping.launch">
        <arg name="scan_topic" value="/scan" /> 
        <arg name="laser_frame" value="laser" />
        <arg name="odom_frame" value="odom" />
        <arg name="base_frame" value="base_link" />
        <arg name="map_frame" value="map" />
    </include>
    </group>

    <!--slam toolbox-->
    <group if="$(arg slam_toolbox)">
    <include file="$(find mowito_turtlebot)/launch/secondary_launch/start_slam_toolbox.launch">
        <arg name="localization" value="$(arg localization)"/>
    </include>
    </group>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find mowito_turtlebot)/rviz/mowito_mapping.rviz"/>
  </group>
</launch>
